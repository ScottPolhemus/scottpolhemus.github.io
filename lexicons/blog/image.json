{
  "lexicon": 1,
  "id": "us.polhem.blog.image",
  "description": "An image uploaded to the blog.",
  "defs": {
    "main": {
      "type": "object",
      "required": [
        "filename",
        "image",
        "alt"
      ],
      "properties": {
        "filename": {
          "type": "string"
        },
        "image": {
          "type": "blob",
          "accept": [
            "image/*"
          ],
          "maxSize": 1000000
        },
        "alt": {
          "type": "string",
          "description": "Alt text description of the image, for accessibility."
        },
        "aspectRatio": {
          "type": "object",
          "description": "width:height represents an aspect ratio. It may be approximate, and may not correspond to absolute dimensions in any given unit.",
          "required": [
            "width",
            "height"
          ],
          "properties": {
            "width": {
              "type": "integer",
              "minimum": 1
            },
            "height": {
              "type": "integer",
              "minimum": 1
            }
          }
        }
      }
    }
  }
}